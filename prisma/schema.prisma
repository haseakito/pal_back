// database
datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// generator
generator client {
    provider = "prisma-client-py"
    recursive_type_depth = -1
}

// User schema
model User {
    id             String   @id
    username       String
    email          String   @unique
    emialVerified  Boolean
    bio            String?
    coverImage     String?
    profileImage   String?
    hashedPassword String
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
}


